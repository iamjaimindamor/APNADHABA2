    <!-- product section -->
    <div class="product-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="section-title">
                        <h3><span class="orange-text">Our</span> Products</h3>
                        <p>Must Try</p>
                    </div>
                </div>
            </div>
            <div class="row">

                @{
                    List<Product>? m = Model.dualProductList;
                    List<Category>? c = Model.dualCatList;
                    int count = 0;

                    foreach (var i in m)
                    {
                        count++;
                        if (count == 4)
                        {
                            break;
                        }

                       foreach (var y in c)
                        {

                            if (i.CategoryId == y.CategoryId)
                            {
                                <div class="col-lg-4 col-md-6 text-center">
                                    <div class="single-product-item">
                                        <div class="product-image">
                                            <a href="#"><img width="100px" height="270px" src="~/Menu/@i.ImagUrl"></img></a>
                                        </div>
                                        <h3>@i.Name</h3>
                                        <p class="product-price"><span></span> @i.Price ₹ </p>
                                        <form method="post" asp-action="Menu">
                                            <input type="hidden" asp-for=dualProduct.ProductId value="@i.ProductId" />
                                            <input type="hidden" asp-for=dualProduct.Name value="@i.Name" />
                                            <input type="submit" class="btn btn-block orange" value="Add To Cart">
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    }
                }


            </div>
        </div>
    </div>

