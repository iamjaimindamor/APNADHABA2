                            <div class="alert alert-success" style="padding-top:10px; width:450px" role="alert">
                                <strong>@TempData["Payment"]</strong>
                            </div>

                        }
                    }
                    <div class="main-menu-wrap">
                        <!-- logo -->
                        <div class="site-logo">
                            <a asp-action="Index" asp-controller="Home">
