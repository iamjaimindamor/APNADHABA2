<body style="overflow-x: hidden; overflow-y:scroll;">
    <div class="row">

        <div class="col-md-6" style="padding-right:280px;">

            <img src="~/img/Credit Card Payment-cuate.png" height="813px" width="690px" />

        </div>

        <div class="col-lg-6" style="padding-left:20px; padding-right:30px; padding-top:45px">
            <h4 style="font-family:Poppins,sans-serif; font-weight:640; font-size:2.5rem" class="d-flex text-center justify-content-center">
                <b>
                    Payment
                    <span style="color:#F28123; font-family:Poppins,sans-serif font-weight:640; font-size:2.5rem;">
                        Summary!
                    </span>
                </b>
            </h4>
            <br />
            <div class="card checkout-order-summary d-flex d-grid mx-auto justify-content-center">
                <div class="card-body">
                    <div class="p-3 bg-light mb-3">
                        <h5 class="font-size-16 mb-0">Order Summary <span class="float-end ms-2">#@ViewBag.User</span></h5>
                    </div>
                    <div class="p-3 bg-light mb-3">
                        <img src="~/assets/images/map.png" widht="35px" height="40px" /><span style="padding-left:20px">  @ViewBag.Address</span>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-centered mb-0 table-nowrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0" style="width: 110px;" scope="col">Product</th>
                                    <th class="border-top-0" scope="col">Product Desc</th>
                                    <th class="border-top-0" scope="col">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model.cart)
                                    {
                                        foreach (var item2 in Model.Products)
                                        {

                                            if (item2.ProductId == item.ProductId)
                                            {
                                                <tr>
                                                    <th scope="row"><img src="~/Menu/@item2.ImagUrl" alt="product-img" title="product-img" class="avatar-lg rounded"></th>
                                                    <td>
                                                        <h5 class="font-size-16 text-truncate"><a href="#" class="text-dark">@item2.Name</a></h5>
                                                        <p class="text-muted mb-0">
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star-half text-warning"></i>
                                                        </p>
                                                        <p class="text-muted mb-0 mt-1">₹ @item2.Price x @item.Quantity</p>
                                                    </td>
                                                    <td>₹ @item.TotalPrice</td>
                                                </tr>
                                            }
                                        }
                                    }
                                }
                            <td colspan="2">
                                <h5 class="font-size-14 m-0">Sub Total :</h5>
                            </td>
                            <td>
                                ₹ @ViewBag.subtotal
                            </td>
                            </tr>


                            <tr>
                                <td colspan="2">
                                    <h5 class="font-size-14 m-0">Shipping Charge :</h5>
                                </td>
                                <td>
                                    ₹ 40.00
                                </td>
                            </tr>


                            <tr class="bg-light">
                                <td colspan="2">
                                    <h5 class="font-size-14 m-0">Total:</h5>
                                </td>
                                <td>
                                    ₹ @ViewBag.total
                                </td>
                            </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
                <br />

                <div class="row justify-content-center d-flex text-center">
                    <div class="col" style="padding-left:150px">
                        <a class="btn btn-block default" asp-action="Cart" asp-controller="Home">
                            Add More Item
                        </a>
                    </div>
                    <div class="col" style="padding-right:150px">
                        <button type="button" class="btn btn-block orange" data-toggle="modal" data-target="#staticBackdrop">
                            <i class="fa fa-rocket"></i> Pay Now ₹@ViewBag.total
                        </button>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="text-right"> <i class="fa fa-close close" data-dismiss="modal"></i> </div> <div class="tabs mt-3">
                                        <ul class="nav nav-tabs" id="myTab" role="tablist"> <li class="nav-item" role="presentation"> <a class="nav-link active" id="visa-tab" data-toggle="tab" href="#visa" role="tab" aria-controls="visa" aria-selected="true"> <img src="~/img/visa-10.jpg" width="80"> </a> </li> <li class="nav-item" role="presentation"> <a class="nav-link" id="paypal-tab" data-toggle="tab" href="#paypal" role="tab" aria-controls="paypal" aria-selected="false"> <img src="~/img/phonepe-logo.jpg" width="80"> </a> </li> </ul> <div class="tab-content" id="myTabContent">
                                            <div class="tab-pane fade show active" id="visa" role="tabpanel" aria-labelledby="visa-tab"> <div class="mt-4 mx-4"> <div class="text-center"> <h5>Credit card</h5> </div> <form asp-action="PaySuccessCard" method="post"><div class="form mt-3"> <div class="inputbox"> <input type="text" name="cardname" class="form-control" required="required"> <span>Cardholder Name</span> </div> <div class="inputbox"> <input type="text" name="cardnum" min="1" max="999" class="form-control" required="required"> <span>Card Number</span> <i class="fa fa-eye"></i> </div> <div class="d-flex flex-row"> <div class="inputbox"> <input type="text" name="expiry" min="1" max="999" class="form-control" required="required"> <span>Expiration Date</span> </div> <div class="inputbox"> <input type="text" name="cvv" min="1" max="999" class="form-control" required="required"> <span>CVV</span> </div> </div> <div class="px-5 pay"> <button type="submit" class="btn btn visa btn-block">Add card & Pay ₹@ViewBag.total</button> </div> </div> </form></div> </div> <div class="tab-pane fade" id="paypal" role="tabpanel" aria-labelledby="paypal-tab"> <div class="px-5 mt-5"> <form asp-action="PaySuccessUPI"><div class="inputbox"> <input type="text" name="upiID" class="form-control" required="required"> <span>Enter UPI ID</span> </div> <div class="pay px-5"> <button type="submit" class="btn btn phonepe btn-block">Add UPI ID & Pay ₹@ViewBag.total </button> </form></div> </div>

                                        </div>
                                    </div> <br />  <a asp-action="Payment" asp-controller="Home"> close </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <br />
        </div>
        <div class="d-flex justify-content-center">
            <p>
                <b>
                    Crafted With
                    <span style="color:#F28123; "><span style="color:#DC143C">&hearts; </span>by Jaimin</span>
                </b>
            </p>
        </div>
    </div>
    </div>


    </div>

    </div>
</body>
