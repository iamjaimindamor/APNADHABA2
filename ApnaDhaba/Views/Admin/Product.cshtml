@model dualModel;
@{
    ViewData["Title"] = "Product";
    Layout = "_AdminLayout";
}

<div class="pcoded-content">
    <div class="card borderless-card">
        <div class="card-block danger-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Products</h5>
                <span>Add Product</span>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="#!">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Admin">Admin</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Product">Products</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="card container">
        <div class="card-body">
            <div class="mx-md-auto d-grid">
                <form class="form-control" method="post">
                    <h5 class="card-title"><b>Add Product Here</b></h5>
                    <div>
                        <label asp-for="dualProduct.Name"> </label>
                        <br />
                        <input asp-for="dualProduct.Name" class="form-control wd-40" type="text" id="name" />
                    </div>
                    <div>
                        <label asp-for="dualProduct.Description"> </label>
                        <br />
                        <input asp-for="dualProduct.Description" class="form-control" type="text" id="name" />
                    </div>
                    <div>
                        <label asp-for="dualProduct.Price"> </label>
                        <br />
                        <input asp-for="dualProduct.Price" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="dualProduct.Quantity"> </label>
                        <br />
                        <input asp-for="dualProduct.Quantity" class="form-control" type="number" />
                    </div>
                    <div>
                        <label asp-for="dualProduct.ImagUrl"> </label>
                        <br />
                        <input asp-for="dualProduct.ImagUrl" class="form-control" type="file" />
                    </div>
                    <div>
                        <label asp-for="dualProduct.CategoryId"> </label>
                        <br />
                        <select asp-for="dualProduct.CategoryId" class="form-control" asp-items="@(new SelectList(Model.dualcatList.catList,"Value","Text"))"></select>

                        <input type="hidden" value=@DateTime.Now asp-for="dualProduct.CreateDate"></input>

                    <br>
                    <input type="submit" class="btn btn-primary d-block mx-md-auto form-control" />



                </form>
              
            </div>
       
        </div>

        @{
            if (TempData["addedSuccess"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show " role="alert">
                    <strong>Done!</strong> @TempData["addedSuccess"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }
    </div>
</div>



