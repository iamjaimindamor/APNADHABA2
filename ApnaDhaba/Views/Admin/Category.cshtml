@model Category

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="pcoded-content">
    <div class="card borderless-card">
        <div class="card-block danger-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Manage Category</h5>
                <span>Here We Can Add , Remove , Edit Category</span>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="#!">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index" asp-controller="Admin">Admin</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Category" asp-controller="Admin">Category</a>
                    </li>
                </ul>
            </div>
        </div>


    </div>

    <div class="card container">
        <div class="card-body">
            <form class="form-control" method="post">
                <label asp-for="Name"></label>
                <br>
                <input type="text" class="form-control" asp-for="Name" />
                <br />
                <input type="submit" class="form-control" class="btn btn-success btn-outline-success d-block">
            </form>

            @{
                if (TempData["addedSuccess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show form-control" role="alert">
                        <strong>Done!</strong> @TempData["addedSuccess"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            }
        </div>
    </div>
    




</div>

